{{>./layouts/header}}

<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Title</th>
			<th scope="col">Content</th>
		</tr>
	</thead>
	<tbody>

<!-- 
	Model 인터페이스 객체에 저장돼서 넘어오는 데이터가 List 형식의 묶음 데이터일 경우
	자동으로 사용 범위 시작부터 끝까지 반복 처리를 한다. 
-->
	{{#article}} <!-- article 사용 범위 시작 -->
	<tr>
		<td>{{id}}</td>
		<td>{{title}}</td>
		<td>{{content}}</td>
	</tr>
	{{/article}} <!-- article 사용 범위 끝 -->
	</tbody>
</table>

<a href="/articles" class="btn btn-success">목록보기</a>
<!-- article 사용 범위 외부에서는 Model 인터페이스 객체에 저장돼서 넘어오는 데이터에 "."을 찍어 접근한다. -->
<!-- <a href="/articles/{{id}}/edit" class="btn btn-success">수정하기</a> -->
<a href="/articles/{{article.id}}/edit" class="btn btn-success">수정하기</a>
<!-- 글 삭제하기 링크 추가 -->
<!-- delete 방식으로 처리해야 하지만 지금은 a 태그로 처리하고 나중에 js로 처리한다. -->
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제하기</a>


{{>./layouts/footer}}

